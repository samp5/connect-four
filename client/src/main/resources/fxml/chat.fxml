<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.TextFlow?>

<AnchorPane maxHeight="720.0" maxWidth="360.0" minHeight="720.0" minWidth="360.0" prefHeight="720.0" prefWidth="360.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ChatController">
   <children>
      <VBox prefHeight="540.0" prefWidth="380.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <ScrollPane fx:id="chatHistoryScroll" hbarPolicy="NEVER" minViewportHeight="600.0" prefHeight="653.0" prefViewportHeight="600.0" prefWidth="380.0" styleClass="debug">
               <content>
                  <VBox fx:id="chatHistory" alignment="TOP_CENTER" prefHeight="200.0" prefWidth="380.0" styleClass="debug" />
               </content></ScrollPane>
            <HBox alignment="CENTER_LEFT" prefHeight="87.0" prefWidth="145.0">
               <children>
                  <Button fx:id="sendButton" mnemonicParsing="false" prefHeight="43.0" prefWidth="66.0" styleClass="send-button" stylesheets="@../css/chat.css" text="Send">
                     <font>
                        <Font size="14.0" />
                     </font></Button>
                  <HBox fx:id="chatEditorBox">
                     <children>
                        <StackPane>
                           <children>
                              <TextFlow fx:id="chatEditorDisplay" mouseTransparent="true" style="-fx-background-color: white;">
                                 <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </padding>
                              </TextFlow>
                              <TextArea fx:id="chatEditorInput" wrapText="true"> </TextArea>
                           </children>
                        </StackPane>
                     </children>
                  </HBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
