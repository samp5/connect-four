<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.TextFlow?>

<BorderPane fx:id="chatPane" maxHeight="720.0" maxWidth="360.0" minHeight="720.0" minWidth="360.0" prefHeight="720.0" prefWidth="360.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ChatController">
   <center>
      <ScrollPane fx:id="chatHistoryScroll" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" minViewportHeight="600.0" minViewportWidth="360.0" prefHeight="653.0" prefViewportHeight="600.0" prefViewportWidth="360.0" prefWidth="380.0" style="-fx-background-color: transparent;" styleClass="chat-history-scroll">
         <content>
            <VBox fx:id="chatHistory" alignment="TOP_CENTER" prefHeight="200.0" prefWidth="380.0" style="-fx-background-color: transparent;" />
         </content>
      </ScrollPane>
   </center>
   <bottom>
      <HBox alignment="CENTER_LEFT" minHeight="100.0" minWidth="100.0" prefHeight="100.0" prefWidth="145.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="sendButton" maxHeight="50.0" maxWidth="100.0" minHeight="50.0" minWidth="100.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="100.0" styleClass="send-button" text="SEND">
               <font>
                  <Font size="14.0" />
               </font>
               <HBox.margin>
                  <Insets bottom="5.0" left="10.0" right="5.0" top="5.0" />
               </HBox.margin>
            </Button>
            <HBox fx:id="chatEditorBox">
               <children>
                  <StackPane>
                     <children>
                        <TextFlow fx:id="chatEditorDisplay" mouseTransparent="true">
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </TextFlow>
                        <TextArea fx:id="chatEditorInput" wrapText="true"> </TextArea>
                     </children>
                  </StackPane>
               </children>
            </HBox>
         </children>
      </HBox>
   </bottom>
</BorderPane>
